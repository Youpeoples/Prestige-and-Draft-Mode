<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

  <!-- Virtual Template for Spell Choice Button -->
  <Button name="SpellChoiceButtonTemplate" virtual="true">
  <Size><AbsDimension x="256" y="256"/></Size>
  <Layers>

    <!-- Background Layer -->
    <Layer level="BACKGROUND">
      <Texture name="$parentBackground" file="Interface\AddOns\PrestigeSystem\Textures\card.tga">
        <Anchors>
          <Anchor point="TOPLEFT"/>
          <Anchor point="BOTTOMRIGHT"/>
        </Anchors>
      </Texture>
    </Layer>

    <!-- Spell Name at Top -->
    <Layer level="ARTWORK">
      <FontString name="$parentName" inherits="GameFontNormal" justifyH="CENTER">
        <Anchors>
          <Anchor point="TOP" x="0" y="-36"/> <!-- Lower than before -->
        </Anchors>
      </FontString>
    </Layer>

    <!-- Icon BELOW name -->
    <Layer level="OVERLAY">
      <Texture name="$parentIcon">
        <Size><AbsDimension x="40" y="40"/></Size>
        <Anchors>
          <Anchor point="TOP" relativeTo="$parentName" relativePoint="BOTTOM" x="0" y="-20"/> <!-- Lower -->
        </Anchors>
      </Texture>
    </Layer>

    <!-- Description BELOW icon -->
    <Layer level="OVERLAY">
      <!-- Mana -->
      <FontString name="$parentMana" inherits="GameFontHighlightSmall">
        <Anchors>
          <Anchor point="TOP" relativeTo="$parentIcon" relativePoint="BOTTOM" x="0" y="-4"/>
        </Anchors>
        <JustifyH>CENTER</JustifyH>
      </FontString>

      <!-- Cast Time -->
      <FontString name="$parentCastTime" inherits="GameFontHighlightSmall">
        <Anchors>
          <Anchor point="TOP" relativeTo="$parentMana" relativePoint="BOTTOM" x="0" y="0"/>
        </Anchors>
        <JustifyH>CENTER</JustifyH>
      </FontString>

      <!-- Description -->
      <FontString name="$parentDescription" inherits="GameFontHighlightSmall">
        <Size><AbsDimension x="146" y="80"/></Size>
        <Anchors>
          <Anchor point="TOP" relativeTo="$parentCastTime" relativePoint="BOTTOM" x="0" y="10"/>
        </Anchors>
        <JustifyH>CENTER</JustifyH>
        <JustifyV>TOP</JustifyV>
        <NonSpaceWrap>true</NonSpaceWrap>
        <MaxLines>4</MaxLines>
      </FontString>
    </Layer>

    <!-- Required level above bottom -->
    <Layer level="OVERLAY">
      <FontString name="$parentLevelReq" inherits="GameFontNormalSmall">
        <Anchors>
          <Anchor point="BOTTOM" x="0" y="51"/> <!-- Raised up from bottom -->
        </Anchors>
        <Color r="1.0" g="0.82" b="0.0"/>
      </FontString>
    </Layer>

    <!-- Highlight Glow Layer -->
    <Layer level="HIGHLIGHT">
      <Texture name="$parentHighlight" file="Interface\AddOns\PrestigeSystem\Textures\card.tga" alphaMode="ADD">
        <Size><AbsDimension x="256" y="256"/></Size>
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
      </Texture>
    </Layer>

    <!-- Selection Border -->
    <Layer level="OVERLAY">
      <Texture name="$parentSelectionBorder" file="Interface\Buttons\UI-ActionButton-Border" hidden="true">
        <Size><AbsDimension x="160" y="180"/></Size>
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
      </Texture>
    </Layer>

  </Layers>
</Button>


  <!-- Main Spell Choice Frame -->
  <Frame name="SpellChoiceFrame" parent="UIParent" hidden="true" movable="true" frameStrata="FULLSCREEN_DIALOG">
    <Size><AbsDimension x="650" y="300"/></Size>
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>

 

    <BackdropBorderColor r="1.0" g="0.82" b="0.0"/>

    <Layers>
      <Layer level="ARTWORK">
        <FontString name="SpellChoiceTitle" inherits="GameFontNormalLarge" text="Choose a Spell">
          <Anchors>
            <Anchor point="TOP" x="0" y="-20"/>
          </Anchors>
          <Color r="1.0" g="0.85" b="0.1"/> <!-- Golden color -->
          <ShadowOffset>
            <AbsDimension x="1" y="-1"/>
          </ShadowOffset>
          <ShadowColor r="0" g="0" b="0" a="1"/>
        </FontString>a
      </Layer>
    </Layers>

    <!-- Spell Option Buttons -->
    <Frames>
      <Button name="SpellChoiceButton1" inherits="SpellChoiceButtonTemplate">
        <Anchors>
          <Anchor point="CENTER" x="-210" y="0"/>
        </Anchors>
      </Button>

      <Button name="SpellChoiceButton2" inherits="SpellChoiceButtonTemplate">
        <Anchors>
          <Anchor point="CENTER" x="0" y="0"/>
        </Anchors>
      </Button>

      <Button name="SpellChoiceButton3" inherits="SpellChoiceButtonTemplate">
        <Anchors>
          <Anchor point="CENTER" x="210" y="0"/>
        </Anchors>
      </Button>

      <!-- Reroll Button -->
      <Button name="SpellChoiceRerollButton" inherits="UIPanelButtonTemplate" text="Reroll">
        <Size><AbsDimension x="100" y="24"/></Size>
        <Anchors>
          <Anchor point="TOP" relativeTo="SpellChoiceButton2" relativePoint="BOTTOM" x="0" y="0"/>
        </Anchors>
        <Scripts>
          <OnClick>
            if SpellChoiceFrame and SpellChoiceFrame.RerollChoices then
              SpellChoiceFrame:RerollChoices()
            end
          </OnClick>
        </Scripts>
      </Button>
    </Frames>
  </Frame>
</Ui>
